<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:label="Home"
        android:name="uz.idea.newinvoiceapplication.presentation.screens.homeScreen.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_documentFragment"
            app:destination="@id/documentFragment" />
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="uz.idea.newinvoiceapplication.presentation.screens.settingsScreen.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/filter"
        android:label="Filter"
        android:name="uz.idea.newinvoiceapplication.presentation.screens.filterScreen.FilterFragment"
        tools:layout="@layout/fragment_filter" />
    <fragment
        android:id="@+id/documentFragment"
        android:name="uz.idea.newinvoiceapplication.presentation.screens.docDataScreen.DocumentInfoFragment"
        android:label="Document"
        tools:layout="@layout/fragment_document_info" />
</navigation>