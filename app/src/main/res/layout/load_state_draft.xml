<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/error_linear"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/error_text"
            android:text="@string/act_summa"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/delete_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retry"
            android:textSize="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:background="@drawable/button_bac"
            android:text="@string/retry"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <androidx.cardview.widget.CardView
               android:layout_marginHorizontal="@dimen/_8sdp"
               app:cardCornerRadius="@dimen/_8sdp"
               app:cardElevation="0dp"
               app:cardBackgroundColor="@color/shimmer_first"
               android:layout_marginVertical="@dimen/_5sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:layout_marginTop="@dimen/_7sdp"
                       android:layout_marginHorizontal="@dimen/_10sdp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <androidx.appcompat.widget.LinearLayoutCompat
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <androidx.cardview.widget.CardView
                               app:cardElevation="0sp"
                               android:layout_marginEnd="@dimen/_5sdp"
                               app:cardBackgroundColor="@color/shimmer_second"
                               app:cardCornerRadius="@dimen/_4sdp"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_18sdp"/>
                           <androidx.cardview.widget.CardView
                               app:cardElevation="0sp"
                               android:layout_marginTop="@dimen/_4sdp"
                               android:layout_marginEnd="@dimen/_5sdp"
                               app:cardBackgroundColor="@color/shimmer_second"
                               app:cardCornerRadius="@dimen/_4sdp"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_18sdp"/>
                       </androidx.appcompat.widget.LinearLayoutCompat>
                       <androidx.appcompat.widget.LinearLayoutCompat
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <androidx.cardview.widget.CardView
                               app:cardElevation="0sp"
                               android:layout_marginHorizontal="@dimen/_5sdp"
                               app:cardBackgroundColor="@color/shimmer_second"
                               app:cardCornerRadius="@dimen/_4sdp"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_18sdp"/>
                           <androidx.cardview.widget.CardView
                               app:cardElevation="0sp"
                               android:layout_marginTop="@dimen/_4sdp"
                               android:layout_marginHorizontal="@dimen/_5sdp"
                               app:cardBackgroundColor="@color/shimmer_second"
                               app:cardCornerRadius="@dimen/_4sdp"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_18sdp"/>
                       </androidx.appcompat.widget.LinearLayoutCompat>
                       <androidx.appcompat.widget.LinearLayoutCompat
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <androidx.cardview.widget.CardView
                               app:cardElevation="0sp"
                               android:layout_marginStart="@dimen/_5sdp"
                               app:cardBackgroundColor="@color/shimmer_second"
                               app:cardCornerRadius="@dimen/_4sdp"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/_18sdp"/>
                       </androidx.appcompat.widget.LinearLayoutCompat>
                   </androidx.appcompat.widget.LinearLayoutCompat>

                   <androidx.cardview.widget.CardView
                       app:cardElevation="0sp"
                       android:layout_marginTop="@dimen/_7sdp"
                       android:layout_marginHorizontal="@dimen/_10sdp"
                       app:cardBackgroundColor="@color/shimmer_second"
                       app:cardCornerRadius="@dimen/_4sdp"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_18sdp"/>
                   <androidx.cardview.widget.CardView
                       app:cardElevation="0sp"
                       android:layout_marginTop="@dimen/_7sdp"
                       android:layout_marginHorizontal="@dimen/_10sdp"
                       app:cardBackgroundColor="@color/shimmer_second"
                       app:cardCornerRadius="@dimen/_4sdp"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_18sdp"/>
                   <View
                       android:layout_marginTop="@dimen/_7sdp"
                       android:background="@color/line_color"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"/>
                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:orientation="horizontal"
                       android:layout_marginHorizontal="@dimen/_8sdp"
                       android:layout_marginTop="@dimen/_8sdp"
                       android:layout_marginBottom="@dimen/_10sdp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:layout_weight="1"
                           app:cardElevation="0dp"
                           app:cardCornerRadius="@dimen/_4sdp"
                           app:cardBackgroundColor="@color/shimmer_second"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_18sdp"/>
                       <androidx.cardview.widget.CardView
                           android:layout_weight="2"
                           app:cardCornerRadius="@dimen/_4sdp"
                           android:layout_marginStart="@dimen/_10sdp"
                           app:cardBackgroundColor="@color/shimmer_second"
                           app:cardElevation="0dp"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/_18sdp"/>
                   </androidx.appcompat.widget.LinearLayoutCompat>
               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.cardview.widget.CardView>
       </androidx.appcompat.widget.LinearLayoutCompat>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>