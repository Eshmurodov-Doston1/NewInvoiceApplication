<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center|start"
        android:background="@drawable/bac_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_tv"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:text="№"
            android:gravity="center"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"/>
        <View

            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_service"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:text="Идентификационный код и название по Единому электронному национальному каталогу товаров (услуг"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_name"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Наименование работ (услуг)"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_measurement"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Единица измерения"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_count"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Количество"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_summa"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Цена"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/line_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_total_summa"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:text="Сумма"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>